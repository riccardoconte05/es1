#include<stdio.h>
#include<math.h>

int main()
{
	int basemin, basemag, l1,l2,altezza;
	int perimetro, area;
	
	printf("inserisci base minore ");
	scanf("%d",& basemin);
	
	printf("inserisci base maggiore ");
	scanf("%d",& basemag);
	
	printf("inserisci lato 1 ");
	scanf("%d",&l1);
	
	printf("inserisci lato 2 ");
	scanf("%d",&l2);
	
	printf("inserisci altezza ");
	scanf("%d",&altezza);
	
	perimetro=basemin+basemag+l1+l2;
	area=((basemin+basemag)*altezza)/2;
	
	
	printf("il perimetro del trapezio e' %d invece l'area e'%d",perimetro,area);
	
	//termine del lavoro
	return 0;
	
}
