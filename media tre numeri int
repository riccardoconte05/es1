#include <stdio.h>
int main ()
{
int voto1,voto2,voto3;
int media;
printf("inserisci il primo numero ");
scanf("%d",&voto1);
printf("inserisci il secondo numero ");
scanf("%d",&voto2);
printf("inserisci il terzo numero ");
scanf("%d",&voto3);
media=(voto1+voto2+voto3)/3;
printf("la media dei voti e' %d",media);
return 0;

}
